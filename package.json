{
  "name": "@bicycle-codes/ephemeral-crypto",
  "description": "In-browser cryptography",
  "private": true,
  "type": "module",
  "version": "0.0.3",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/index.ts --target=es2020 --bundle --keep-names > test/test-bundle.js",
    "test": "npm run build && esbuild ./test/index.ts --bundle | node --input-type=module | tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --tsconfig=tsconfig.build.json --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json",
    "start": "vite",
    "preversion": "npm run lint",
    "version": "auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@bicycle-codes/one-webcrypto": "^1.0.3",
    "@bicycle-codes/uint8arrays": "^5.0.3"
  },
  "devDependencies": {
    "@nichoth/debug": "^0.5.0",
    "@nichoth/tapzero": "^0.8.4",
    "@preact/preset-vite": "^2.8.1",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.20.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.20.0",
    "postcss-nesting": "^12.0.2",
    "preact": "^10.19.3",
    "standardx": "^7.0.0",
    "tap-arc": "^1.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/ephemeral-crypto.git"
  },
  "keywords": [
    "cryptography",
    "encrypt",
    "decrypt",
    "crypto",
    "browser"
  ],
  "bugs": {
    "url": "https://github.com/nichoth/ephemeral-crypto/issues"
  },
  "homepage": "https://github.com/nichoth/ephemeral-crypto#readme"
}
